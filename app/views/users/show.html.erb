<!--ユーザー編集が成功したときのフラッシュメッセージ-->
<div>
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row p-3">
    <div class="col-md-3">

<!--部分テンプレート-->
<%= render 'books/list.html.erb', book: @book %>

</div>

<div class="col-md-8 offset-md-1">

<h2>Books</h2>
<table class="table table-hover">
    <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    </thead>

    <tbody>
        <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to user_path(@user.id) do %>
          <%= image_tag book.user.get_profile_image(80,80) %>
          <% end %>
        </td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>

  </table>

  </div>
</div>