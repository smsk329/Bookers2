<div>
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-3">

<%= render 'books/list.html.erb', book: @book %>

</div>

<div class="col-md-8 offset-md-1">

<h2>Books</h2>
<table style="border="1" rules="rows">
    <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    </thead>

    <tbody>
        <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image(80,80) %></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>

  </table>

  </div>
</div>