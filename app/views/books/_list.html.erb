
<h1>User info</h1>

    <%= image_tag @user.get_profile_image(100,100) %>

    <table class="table">
      <tbody>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>

        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </tbody>
    </table>

<br>

  <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-sm btn-block mb-3" do %>
  <i class="fas fa-user-cog"></i>
  <% end %>

  <h1>New book</h1>
  <%= form_with model: book do |f| %>
    <div class="form-group">
    <h6>Title</h6>
    <%= f.text_field :title %>
    </div>
    <div class="form-group">
    <h6>Opinion</h6>
    <%= f.text_area :body %>
    </div>
    <div class="form-group">
    <%= f.submit 'Create Book', class:'btn btn-sm btn-success' %>
    </div>
  <% end %>
