<h1>User info</h1>
    <%= image_tag current_user.get_profile_image(100,100) %>
    <table style="border="1" rules="rows">
      <tbody>
        <tr>
          <th>name</th>
          <th><%= current_user.name %></th>
        </tr>

        <tr>
          <th>introduction</th>
          <th><%= current_user.introduction %></th>
        </tr>
      </tbody>
    </table>
<br>

  <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-sm btn-block mb-3" do %>
  <i class="fas fa-user-cog"></i>
  <% end %>
  
  <h1>New book</h1>
  <%= form_with model: book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
