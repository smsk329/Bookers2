<!--本の投稿・更新に成功したときのフラッシュメッセージ-->
<div>
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row p-3">
    <div class="col-md-3">

<%= render 'list', book: Book.new %>

</div>

<div class="col-md-8 offset-md-1">

<h2>Book detail</h2>
<table class="table">
    <tbody>
      <tr>
        <td><%= link_to user_path(@book.user.id) do %>
        <%= image_tag @book.user.get_profile_image(100,100) %><% end %>
        <br>
        <%= link_to @book.user.name, user_path(@book.user.id) %></td>
        <td><%= link_to @book.title, book_path(@book.id) %></td>
        <td><%= @book.body %></td>
        <% if @book.user == current_user %>
        <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
        <td><%= link_to "Destroy", book_path(@book.id), class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %></td>
        
        <% end %>
      </tr>
    </tbody>
  </table>

   </div>
</div>